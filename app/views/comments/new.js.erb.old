var mytext = "<%= escape_javascript(render :partial => 'form_comment') %>";

$(".addcomment").dialog({
	modal: true,
	title: ' Type your comment  ',
	height: 100,
	width: 600,
	position: 'top',
	open: function() {
	$(".addcomment").html(mytext)
	},
	close: function(event, ui) {
		$(".addcomment").remove(); }
});